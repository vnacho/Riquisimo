@using Ferpuser.Models.ViewModels
@model DocumentosViewModel

@Html.HiddenFor(f => f.IdPersonal)
<div class="form-row">
    <div class="form-group col-md-12">
        @Html.LabelFor(f => f.IdObra, new { @class = "small" })
        @Html.DropDownListFor(f => f.IdObra, new SelectList(ViewBag.CentrosCoste, "Id", "Display"), "-Seleccionar-", new { @class = "form-control select2" })
        @Html.ValidationMessageFor(f => f.IdObra, "", new { @class = "text-danger small" })
    </div>
    <div class="form-group col-md-12">
        @Html.LabelFor(f => f.Fecha, new { @class = "small" })
        @Html.EditorFor(f => f.Fecha, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(f => f.Fecha, "", new { @class = "text-danger small" })
    </div>
</div>

<script>
    $('#IdObra').select2({
        dropdownParent: $('#descargarDocModal')
    });
</script>