<script>
    function AddAlbaranLinea() {
        var codigoEvento = $("#CodigoEvento").val();
        $("#divAlbaranLinea").load('@Url.Action("AddLinea", "VentasAlbaran")' + '?CodigoEvento=' + codigoEvento);
    }

    function EditAlbaranLinea(orden) {
        $.ajax({
            type: "POST",
            url: "@Url.Action("EditLinea", "VentasAlbaran")" + "?orden=" + orden,
            data: $('#form').serialize(),
            success: function (response) {
                $("#divAlbaranLinea").html(response);
            },
            failure: function (response) {
                alert(response.responseText);
            },
            error: function (response) {
                alert(response.responseText);
            }
        });

    }

    function SaveLinea() {
        $.ajax({
            type: "POST",
            url: "@Url.Action("SaveLinea", "VentasAlbaran")",
            data: $('#form').serialize(),
            dataType: 'JSON',
            success: function (response) {
                if (response.status == 1) {
                    $("#divLineas").html(response.data);
                    $('#NuevaLineaModal').modal('hide');
                    $('body').removeClass('modal-open');
                    $('.modal-backdrop').remove();
                    $('[data-toggle="tooltip"]').tooltip();
                }
                else {
                    $("#divAlbaranLinea").html(response.data);
                }
            },
            failure: function (response) {
                alert(response.responseText);
            },
            error: function (response) {
                alert(response.responseText);
            }
        });
    }

    function DeleteLinea(orden) {
        $.ajax({
            type: "POST",
            url: "@Url.Action("DeleteLinea", "VentasAlbaran")" + "?orden=" + orden,
            data: $('#form').serialize(),
            success: function (response) {
                $("#divLineas").html(response);
            },
            failure: function (response) {
                alert(response.responseText);
            },
            error: function (response) {
                alert(response.responseText);
            } 
        });
    }
   
    function AddLineasDesdePedido() {
        var codigoCliente = $("#CodigoCliente").val();
        if (codigoCliente != '') {
            var url = "@Url.Action("Buscador", "VentasPedido")" + "?CodigoCliente=" + codigoCliente + "&EstadosPedido[0]=0&EstadosPedido[1]=1";
            $("#divPedidos").load(url);
            $("#NuevaLineaDesdePedidoModal").modal('show');
        }
        else {
            alert('Para añadir líneas desde pedido es necesario seleccionar primero el cliente.')
            return false;
        }
    }

    function PedidoSeleccionado(idPedidoSeleccionado) {
        $.ajax({
            type: "POST",
            url: "@Url.Action("SaveLineasDesdePedido", "VentasAlbaran")" + "?IdPedido=" + idPedidoSeleccionado,
            data: $('#form').serialize(),
            dataType: 'JSON',
            success: function (response) {
                if (response.status == 1) {
                    $("#divLineas").html(response.data);
                    $('#NuevaLineaModal').modal('hide');
                    $('body').removeClass('modal-open');
                    $('.modal-backdrop').remove();
                    $('[data-toggle="tooltip"]').tooltip();
                }
                else {
                    $("#divAlbaranLinea").html(response.data);
                }
            },
            failure: function (response) {
                alert(response.responseText);
            },
            error: function (response) {
                alert(response.responseText);
            }
        });
    }

    function CargarPrecio(codigoArticulo) {
        var codigoCliente = $("#CodigoCliente").val();

        if (codigoArticulo != '' && codigoCliente != '') {
            $.ajax({
                type: "POST",
                url: "@Url.Action("GetPVP", "PreciosCliente")" + "?codigoArticulo=" + codigoArticulo + "&codigoCliente=" + codigoCliente,
                data: $('#form').serialize(),
                dataType: 'JSON',
                success: function (response) {
                    if (response != null) {
                        $("#linea_PrecioUnitario").val(response.pvP1.toString().replace(".", ","));
                    }
                    else {
                        $("#linea_PrecioUnitario").val('');
                    }
                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (response) {
                    alert(response.responseText);
                }
            });
        }        
    }
    function AutocompletarEventoSeleccionado(codigo) {
        $("#linea_CodigoEvento").val(codigo);
    }
</script>
