@using Ferpuser.Models.Sage
@model IEnumerable<Client>
@{
    Layout = null;
}

@if (Model != null && Model.Any())
{
    <div class="list-group list-group-flush w-100">
        @foreach (var item in Model)
        {
            <a href="#" class="list-group-item text-dark client-search-item" onclick="ClienteSeleccionado('@item.Id','@item.BusinessName')">
                @item.BusinessName
            </a>
        }
    </div>
}
else
{
    <div class="text-left mt-3 text-info">
        No se encontraron resultados
    </div>
}
