@model IEnumerable<CompraAlbaran>

<h5 class="font-weight-bold ml-2"><i class="fas fa-search mr-2" title="Seleccionar"></i>Buscador de albaranes</h5>
<p class="lead font-small ml-2">Seleccione el registro del siguiente listado</p>
<hr />

@if (Model != null && Model.Any())
{
    <div class="table-responsive mt-2">
        <table class="table table-sm table-hover table-striped bg-white">
            <thead class="font-weight-bolder">
                <tr>
                    <th scope="col" class="text-center">
                        @Html.DisplayNameFor(f => f.First().CodigoAlbaran)
                    </th>
                    <th scope="col" class="text-center">
                        @Html.DisplayNameFor(f => f.First().Fecha)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(f => f.First().NombreProveedor)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(f => f.First().NombreOperario)
                    </th>
                    <th scope="col" class="text-right">
                        @Html.DisplayNameFor(f => f.First().Total)
                    </th>
                    <th scope="col" class="text-center">
                        @Html.DisplayNameFor(f => f.First().EstadoAlbaran)
                    </th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (CompraAlbaran item in Model)
                {
                    <tr>
                        <td class="text-center">@item.CodigoAlbaran</td>
                        <td class="text-center">@item.Fecha.ToShortDateString()</td>
                        <td>@item.NombreProveedor</td>
                        <td>@item.NombreOperario</td>
                        <td class="text-right font-weight-bold">@item.Total.ToString("C")</td>
                        <td class="text-center">@Html.DisplayFor(f => item.EstadoAlbaran)</td>
                        <td class="text-right">
                            <a class="text-info mx-2" onclick="AlbaranSeleccionado(@item.Id);">
                                <i class="fas fa-thumbtack" title="Seleccionar"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <partial name="_Empty" model="string.Empty" />
}

