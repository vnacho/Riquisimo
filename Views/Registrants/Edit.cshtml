@model Ferpuser.Models.Registrant

@{
    ViewData["Title"] = "Editar persona inscrita";
    ViewData["Create"] = false;
    ViewData["Validation"] = true;
}

<form asp-action="Edit">
    <div class="row">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-4 form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="Surnames" class="control-label"></label>
            <input asp-for="Surnames" class="form-control" />
            <span asp-validation-for="Surnames" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="TreatmentId" class="control-label"></label>
            <select asp-for="TreatmentId" class="form-control" asp-items="ViewBag.TreatmentId"></select>
            <span asp-validation-for="TreatmentId" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="Position" class="control-label"></label>
            <input asp-for="Position" class="form-control" />
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="ProfessionalCategory" class="control-label"></label>
            <input asp-for="ProfessionalCategory" class="form-control" />
            <span asp-validation-for="ProfessionalCategory" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="Workplace" class="control-label"></label>
            <input asp-for="Workplace" class="form-control" />
            <span asp-validation-for="Workplace" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="LocationId" class="control-label"></label>
            <select asp-for="LocationId" class="form-control" asp-items="ViewBag.LocationId"></select>
            <span asp-validation-for="LocationId" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="NIF" class="control-label"></label>
            <input asp-for="NIF" class="form-control" />
            <span asp-validation-for="NIF" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="Email2" class="control-label"></label>
            <input asp-for="Email2" class="form-control" />
            <span asp-validation-for="Email2" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Id" />
        <input asp-for="Created" class="form-control" />
        <input asp-for="Modified" class="form-control" />
        <input asp-for="Deleted" class="form-control" />

    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>