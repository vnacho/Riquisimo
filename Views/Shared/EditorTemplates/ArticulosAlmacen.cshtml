@using Ferpuser.BLL.Filters
@model ArticulosAlmacen

@Html.HiddenFor(f => f.Id)
<div class="card mb-4 wow d-print-none">
    <div class="form-row card-body">
        <div class="form-group col-md-3">
            @Html.LabelFor(f => f.CentroCosteId, new { @class = "small" })
            @Html.DropDownListFor(f => f.CentroCosteId, new SelectList(ViewBag.CentrosCosteArtAlma, "Id", "Display"), "-Seleccionar-", new { @class = "form-control form-control-sm select2" })
            @Html.ValidationMessageFor(f => f.CentroCosteId, "", new { @class = "text-danger small" })
        </div>
        <div class="form-group col-md-2">
            @Html.LabelFor(f => f.ProductCode, new { @class = "small" })
            @Html.EditorFor(f => f.ProductCode, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(f => f.ProductCode, "", new { @class = "text-danger small" })
        </div>
        <div class="form-group col-md-3">
            @Html.LabelFor(f => f.ProductDescription, new { @class = "small" })
            @Html.EditorFor(f => f.ProductDescription, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(f => f.ProductDescription, "", new { @class = "text-danger small" })
        </div>
        <div class="form-group col-md-3">
            @Html.LabelFor(f => f.ProductDescriptionExt, new { @class = "small" })
            @Html.EditorFor(f => f.ProductDescriptionExt, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(f => f.ProductDescriptionExt, "", new { @class = "text-danger small" })
        </div>
        <div class="form-group col-md-2">
            @Html.LabelFor(f => f.Price, new { @class = "small" })
            @Html.EditorFor(f => f.Price, new { htmlAttributes = new { @class = "form-control", onkeyup = "ReplaceDotByComma(this);" } })
            @Html.ValidationMessageFor(f => f.Price, "", new { @class = "text-danger small" })
        </div>
        <div class="form-group col-md-3">
            @Html.LabelFor(f => f.Rate, new { @class = "small" })
            @Html.EditorFor(f => f.Rate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(f => f.Rate, "", new { @class = "text-danger small" })
        </div>
        <div class="form-group col-md-3">
            @Html.LabelFor(f => f.Rate2, new { @class = "small" })
            @Html.EditorFor(f => f.Rate2, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(f => f.Rate2, "", new { @class = "text-danger small" })
        </div>
    </div>
</div>