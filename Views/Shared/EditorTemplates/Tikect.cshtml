@using Ferpuser.Models.Core
@model Tikect

@Html.HiddenFor(f => f.Id)
<div class="card mb-4 wow d-print-none">
    <div class="form-row card-body">
        <div class="form-group col-md-3">
            @Html.LabelFor(f => f.FechaTikect, new { @class = "small" })
            @Html.EditorFor(f => f.FechaTikect, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(f => f.FechaTikect, "", new { @class = "text-danger small" })
        </div>
        <div class="form-group col-md-5">
            @Html.LabelFor(f => f.tiendaID, new { @class = "small" })
            @Html.DropDownListFor(f => f.tiendaID, new SelectList(ViewBag.Tiendas, "Id", "nombre"), "-Seleccionar-", new { @class = "form-control form-control-sm select2" })
            @Html.ValidationMessageFor(f => f.tiendaID, "", new { @class = "text-danger small" })
        </div>
        <div class="form-group col-md-2">
            @Html.LabelFor(f => f.importe, new { @class = "small" })
            @Html.EditorFor(f => f.importe, new { htmlAttributes = new { @class = "form-control", onkeyup = "ReplaceDotByComma(this);", onClick="this.select();" } })
            @Html.ValidationMessageFor(f => f.importe, "", new { @class = "text-danger small" })
        </div>
    </div>
</div>
