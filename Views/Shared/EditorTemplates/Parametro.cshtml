@model Parametro

@Html.HiddenFor(f => f.Codigo)
@Html.HiddenFor(f => f.Descripcion)
<div class="card mb-4 wow d-print-none">
    <div class="form-row card-body">
        <div class="form-group col-md-12">
            <h6 class="text-info">@Model.Codigo</h6>
            <p class="small">@Model.Descripcion</p>
        </div>

        <div class="form-group col-md-4">
            @Html.LabelFor(f => f.Valor, new { @class = "small" })
            @Html.EditorFor(f => f.Valor, new { htmlAttributes = new { @class = "form-control", placeholder=@Model.Formato } })
            @Html.ValidationMessageFor(f => f.Valor, "", new { @class = "text-danger small" })
        </div>  
        
        @if (!string.IsNullOrWhiteSpace(Model.Formato))
        {
            <div class="form-group col-md-12">
                <p class="small">Introduzca el valor en base al formato especificado: @Model.Formato.</p>
            </div>
        }
    </div>
</div>