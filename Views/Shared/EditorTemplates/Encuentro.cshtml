@model Encuentro

@Html.HiddenFor(f => f.Id)
<div class="card mb-4 wow d-print-none">
    <div class="form-row card-body">
        <div class="form-group col-md-4">
            @Html.LabelFor(f => f.CongressId, new { @class = "" })
            @Html.DropDownListFor(f => f.CongressId, new SelectList(ViewBag.Eventos, "Id", "DisplayName"), "-Seleccionar-", new { @class = "form-control select2" })
            @Html.ValidationMessageFor(f => f.CongressId, "", new { @class = "text-danger small" })
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(f => f.Nombre, new { @class = "" })
            @Html.EditorFor(f => f.Nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(f => f.Nombre, "", new { @class = "text-danger small" })
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(f => f.Lugar, new { @class = "" })
            @Html.EditorFor(f => f.Lugar, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(f => f.Lugar, "", new { @class = "text-danger small" })
        </div>
        <div class="form-group col-md-2">
            @Html.LabelFor(f => f.Fecha, new { @class = "" })
            @Html.EditorFor(f => f.Fecha, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(f => f.Fecha, "", new { @class = "text-danger small" })
        </div>
        <div class="form-group col-md-2">
            @Html.LabelFor(f => f.NumeroMesas, new { @class = "" })
            @Html.EditorFor(f => f.NumeroMesas, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(f => f.NumeroMesas, "", new { @class = "text-danger small" })
        </div>
        <div class="form-group col-md-2">
            @Html.LabelFor(f => f.ComensalesMesa, new { @class = "" })
            @Html.EditorFor(f => f.ComensalesMesa, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(f => f.ComensalesMesa, "", new { @class = "text-danger small" })
        </div>
        <div class="form-group col-md-12">
            <div class="custom-control custom-switch">
                @Html.EditorFor(f => f.ReservaMesa, new { htmlAttributes = new { type = "checkbox", @class = "custom-control-input" } })
                @Html.LabelFor(f => f.ReservaMesa, new { @class = "custom-control-label" })
            </div>
            @Html.ValidationMessageFor(f => f.ReservaMesa, "", new { @class = "text-danger small" })
        </div>       
    </div>
</div>