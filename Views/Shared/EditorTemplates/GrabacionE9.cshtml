@model GrabacionE9

@{ 
    List<KeyValuePair<string, string>> tipos = new List<KeyValuePair<string, string>>();
    tipos.Add(new KeyValuePair<string, string>("E", "Entrada"));
    tipos.Add(new KeyValuePair<string, string>("S", "Salida"));
}

@Html.HiddenFor(f => f.Id)
<div class="card mb-4 wow d-print-none">
    <div class="form-row card-body">
        <div class="form-group col-md-3">
            @Html.LabelFor(f => f.CentroCosteId, new { @class = "small" })
            @Html.DropDownListFor(f => f.CentroCosteId, new SelectList(ViewBag.CentrosCosteE9, "Id", "Display"), "-Seleccionar-", new { @class = "form-control form-control-sm select2" })
            @Html.ValidationMessageFor(f => f.CentroCosteId, "", new { @class = "text-danger small" })
        </div>
        <div class="form-group col-md-2">
            @Html.LabelFor(f => f.Fecha, new { @class = "small" })
            @Html.EditorFor(f => f.Fecha, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(f => f.Fecha, "", new { @class = "text-danger small" })
        </div>
        <div class="form-group col-md-3">
            @Html.LabelFor(f => f.Descripcion, new { @class = "small" })
            @Html.EditorFor(f => f.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(f => f.Descripcion, "", new { @class = "text-danger small" })
        </div>
        <div class="form-group col-md-2">
            @Html.LabelFor(f => f.EntradaSalida, new { @class = "small" })
            @Html.DropDownListFor(f => f.EntradaSalida, new SelectList(tipos, "Key", "Value"), "-Seleccionar-", new { @class = "form-control" })
            @Html.ValidationMessageFor(f => f.EntradaSalida, "", new { @class = "text-danger small" })
        </div>
        <div class="form-group col-md-2">
            @Html.LabelFor(f => f.Importe, new { @class = "small" })
            @Html.EditorFor(f => f.Importe, new { htmlAttributes = new { @class = "form-control", onkeyup = "ReplaceDotByComma(this);" } })
            @Html.ValidationMessageFor(f => f.Importe, "", new { @class = "text-danger small" })
        </div>

        <div class="form-group col-md-3">
            @Html.LabelFor(f => f.DestinoId, new { @class = "small" })
            @Html.DropDownListFor(f => f.DestinoId, new SelectList(ViewBag.CentrosCoste, "Id", "Display"), "-Seleccionar-", new { @class = "form-control form-control-sm select2" })
            @Html.ValidationMessageFor(f => f.DestinoId, "", new { @class = "text-danger small" })
        </div>
    </div>
</div>