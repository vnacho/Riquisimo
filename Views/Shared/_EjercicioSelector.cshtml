@model IEnumerable<Ferpuser.Models.SageComu.ejercici>

@{ 
    string selected = Model.First(f => f.Selected).ANY;
}
<ul class="navbar-nav">
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle waves-effect" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Año @selected</a>
        <div class="dropdown-menu dropdown-primary" aria-labelledby="OptionsMenuLink">
            @foreach (var item in Model)
            {
                <a class="dropdown-item waves-effect" asp-action="Cambiar" asp-controller="Ejercicio" asp-route-ejercicio="@item.ANY">Año @item.ANY</a>
            }
        </div>
    </li>
</ul>
