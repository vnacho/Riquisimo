@using Ferpuser.BLL.Filters
@using Ferpuser.Models.Enums

@model ControlPresupuestarioFilter

<div class="form-row">
    <div class="form-group col-md-2">
        @Html.LabelFor(f => f.FechaDesde, new { @class = "small" })
        @Html.EditorFor(f => f.FechaDesde, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(f => f.FechaDesde, "", new { @class = "text-danger small" })
    </div>
    <div class="form-group col-md-2">
        @Html.LabelFor(f => f.FechaHasta, new { @class = "small" })
        @Html.EditorFor(f => f.FechaHasta, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(f => f.FechaHasta, "", new { @class = "text-danger small" })
    </div>
    <div class="form-group col-md-4">
        @Html.LabelFor(f => f.PrefijoCuenta, new { @class = "small" })
        @Html.EditorFor(f => f.PrefijoCuenta, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(f => f.PrefijoCuenta, "", new { @class = "text-danger small" })
    </div>
    <div class="w-100"></div>
    <div class="form-group col-md-4">
        @Html.LabelFor(f => f.Tipo, new { @class = "small" })
        @Html.DropDownListFor(f => f.Tipo, new SelectList(Html.GetEnumSelectList<TipoInformeControlPresupuestario>(), "Value", "Text", Model == null ? null : Model.Tipo), "-Seleccionar-", new { @class = "form-control" })
        @Html.ValidationMessageFor(f => f.Tipo, "", new { @class = "text-danger small" })
    </div>

    <div class="form-group col-md-4">
        @Html.LabelFor(f => f.TipoCosteCode, new { @class = "small" })
        @Html.DropDownListFor(f => f.TipoCosteCode, new SelectList(ViewBag.TiposCoste, "Value", "Text", Model == null ? null : Model.TipoCosteCode), "-Seleccionar-", new { @class = "form-control select2", onchange = "TipoCosteChanged()" })
        @Html.ValidationMessageFor(f => f.TipoCosteCode, "", new { @class = "text-danger small" })
    </div>
    <div class="form-group col-md-4">
        @Html.LabelFor(f => f.CentroCosteCode, new { @class = "small" })
        @Html.DropDownListFor(f => f.CentroCosteCode, new SelectList(ViewBag.CentrosCoste, "Value", "Text", Model == null ? null : Model.CentroCosteCode), "-Seleccionar-", new { @class = "form-control select2" })
        @Html.ValidationMessageFor(f => f.CentroCosteCode, "", new { @class = "text-danger small" })
    </div>

</div>
    
<script>
    $(document).ready(function () {
        $('.select2').select2();
    });
</script>


