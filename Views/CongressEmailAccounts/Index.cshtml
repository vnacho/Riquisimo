@model IEnumerable<Ferpuser.Models.CongressEmailAccounts>

@{
    ViewData["Title"] = "Correos";

    ViewData["DataTable"] = true;
    ViewData["Back"] = false;
}

<table class="table table-striped table-hover table-sm table-borderless">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Congress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MailUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Congress.DisplayName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Account.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MailUser)
                </td>
                <td class="text-right">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-info mx-2">
                        <i class="fas fa-pencil-alt"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
