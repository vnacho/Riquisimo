                      };
                    }
                },
                templateResult: formatCustom,
                formatSelection: formatCustom,
                escapeMarkup: function(m){ return m;}
            });
        }

        function matchCustom(params, data) {
            // If there are no search terms, return all of the data
            if ($.trim(params.term) === '') {
                return data;
            }
