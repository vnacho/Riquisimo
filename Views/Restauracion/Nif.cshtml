@model Ferpuser.Models.ViewModels.RestauracionNifViewModel
@{
    Layout = "_LayoutRestauracion";
}

<partial name="_CabeceraRestauracion" model="@Model.Congress" />

<form method="post">
    <input type="hidden" asp-for="CongressId" />
    <p>
        <b>@Model.Congress.Name</b><br />
    </p>

    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="NIF">Por favor introduzca su NIF sin espacios ni guiones</label>
            @Html.EditorFor(f => f.NIF, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(f => f.NIF, "", new { @class = "text-danger" })
        </div>       
        <div class="form-group col-md-12">
            <button type="submit" class="btn btn-primary text-nowrap">Enviar<i class="fas fa-paper-plane ml-2"></i></button>                
        </div>
    </div>
</form>